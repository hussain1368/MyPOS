<UserControl
    x:Class="POS.WPF.Views.Sections.TransactionForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:conv="clr-namespace:POS.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:layout="clr-namespace:POS.WPF.Views.Shared"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="SelectionChanged" SourceName="PartnerIdDrp">
            <Behaviors:InvokeCommandAction Command="{Binding SetPartnerNameCmd}" />
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>

    <UserControl.Resources>
        <conv:RadioToEnumConverter x:Key="RadioConverter" />
    </UserControl.Resources>
    <Grid MinWidth="550" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  row 0  -->

        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10,0,10,5">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Transaction Details" />
            <ProgressBar IsIndeterminate="{Binding IsLoading}" />
        </StackPanel>

        <!--  row 1  -->

        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="Amount"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding
                    Path="CurrentTransaction.Amount"
                    TargetNullValue=""
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.Converter>
                        <conv:NumberConverter />
                    </Binding.Converter>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Date"
            Language="en-GB"
            Style="{StaticResource MaterialDesignFloatingHintDatePicker}">
            <DatePicker.SelectedDate>
                <Binding Path="CurrentTransaction.Date" UpdateSourceTrigger="PropertyChanged" />
            </DatePicker.SelectedDate>
        </DatePicker>

        <!--  row 2  -->

        <ComboBox
            x:Name="PartnerIdDrp"
            Grid.Row="2"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="Partner"
            materialDesign:TextFieldAssist.HasClearButton="True"
            DisplayMemberPath="Name"
            ItemsSource="{Binding PartnersList}"
            SelectedValue="{Binding CurrentTransaction.PartnerId}"
            SelectedValuePath="Id"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            Margin="10"
            materialDesign:HintAssist.Hint="Partner Name"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentTransaction.PartnerName" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
            <TextBox.IsReadOnly>
                <Binding Path="CurrentTransaction.PartnerNameReadOnly" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.IsReadOnly>
        </TextBox>

        <!--  row 3  -->

        <ComboBox
            Grid.Row="3"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="Currency"
            materialDesign:TextFieldAssist.HasClearButton="True"
            DisplayMemberPath="Name"
            ItemsSource="{Binding CurrencyList}"
            SelectedValue="{Binding CurrentTransaction.CurrencyId}"
            SelectedValuePath="Id"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="10"
            materialDesign:HintAssist.Hint="Currency Rate"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding
                    Path="CurrentTransaction.CurrencyRate"
                    TargetNullValue=""
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.Converter>
                        <conv:NumberConverter />
                    </Binding.Converter>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <!--  row 4  -->

        <ComboBox
            Grid.Row="4"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="Wallet"
            materialDesign:TextFieldAssist.HasClearButton="True"
            DisplayMemberPath="Name"
            ItemsSource="{Binding WalletsList}"
            SelectedValue="{Binding CurrentTransaction.WalletId}"
            SelectedValuePath="Id"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

        <ComboBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="10"
            materialDesign:HintAssist.Hint="Source"
            materialDesign:TextFieldAssist.HasClearButton="True"
            DisplayMemberPath="Name"
            ItemsSource="{Binding SourceList}"
            SelectedValue="{Binding CurrentTransaction.SourceId}"
            SelectedValuePath="Id"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

        <!--  row 5  -->

        <layout:RadioBox
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Label="Transaction Type"
            Tag="{Binding CurrentTransaction.TransactionType}">
            <StackPanel Orientation="Horizontal">
                <RadioButton
                    Margin="0"
                    Content="Deposit"
                    Validation.ErrorTemplate="{x:Null}">
                    <RadioButton.IsChecked>
                        <Binding
                            Converter="{StaticResource RadioConverter}"
                            ConverterParameter="Deposit"
                            Mode="TwoWay"
                            Path="CurrentTransaction.TransactionType" />
                    </RadioButton.IsChecked>
                </RadioButton>
                <RadioButton
                    Margin="20,0"
                    Content="Withdrawal"
                    Validation.ErrorTemplate="{x:Null}">
                    <RadioButton.IsChecked>
                        <Binding
                            Converter="{StaticResource RadioConverter}"
                            ConverterParameter="Withdrawal"
                            Mode="TwoWay"
                            Path="CurrentTransaction.TransactionType" />
                    </RadioButton.IsChecked>
                </RadioButton>
            </StackPanel>
        </layout:RadioBox>

        <!--  row 6  -->

        <TextBox
            Grid.Row="6"
            Grid.ColumnSpan="2"
            Margin="10"
            materialDesign:HintAssist.Hint="Note"
            AcceptsReturn="True"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentTransaction.Note" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>

        <!--  row 7  -->

        <StackPanel
            Grid.Row="7"
            Grid.ColumnSpan="2"
            Margin="10,5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="10,0"
                Command="{Binding SaveCmd}"
                Content="Save" />
            <Button
                Width="75"
                Command="{Binding CancelCmd}"
                Content="Cancel"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>
    </Grid>
</UserControl>
