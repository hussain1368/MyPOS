<UserControl
    x:Class="POS.WPF.Views.Sections.UserForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid MinWidth="450" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10,0,10,5">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="User Details" />
            <ProgressBar IsIndeterminate="{Binding IsLoading}" />
        </StackPanel>
        <ComboBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="User Role"
            materialDesign:TextFieldAssist.HasClearButton="True"
            SelectedValue="{Binding CurrentUser.UserRole}"
            SelectedValuePath="Tag"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}">
            <ComboBoxItem Tag="Simple">Simple User</ComboBoxItem>
            <ComboBoxItem Tag="Admin">Admin</ComboBoxItem>
        </ComboBox>
        <TextBox
            Grid.Row="2"
            Margin="10"
            materialDesign:HintAssist.Hint="Full Name"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentUser.DisplayName" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
            <Behaviors:Interaction.Triggers>
                <Behaviors:EventTrigger EventName="KeyDown">
                    <Behaviors:InvokeCommandAction Command="{Binding SuggestUsernameCmd}" />
                </Behaviors:EventTrigger>
            </Behaviors:Interaction.Triggers>
        </TextBox>
        <TextBox
            Grid.Row="3"
            Margin="10"
            materialDesign:HintAssist.Hint="Username"
            IsReadOnly="{Binding CurrentUser.IsUsernameReadOnly}"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentUser.Username" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <TextBox
            Grid.Row="4"
            Margin="10"
            materialDesign:HintAssist.Hint="Password"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentUser.Password" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>

        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="10,0"
                Command="{Binding SaveCmd}"
                Content="Save" />
            <Button
                Width="75"
                Command="{Binding CancelCmd}"
                Content="Cancel"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>
    </Grid>
</UserControl>
