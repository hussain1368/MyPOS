<UserControl
    x:Class="POS.WPF.Views.Sections.ChangePassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:POS.WPF.Common.ControlHelper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS.WPF.Views.Sections"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid MinWidth="400" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10,0,10,5">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Password Change" />
            <ProgressBar IsIndeterminate="{Binding IsLoading}" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <PasswordBox
                Padding="0,4,25,4"
                common:PasswordHelper.Attach="True"
                common:PasswordHelper.Password="{Binding Model.CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                materialDesign:HintAssist.Hint="Current Password"
                materialDesign:HintAssist.IsFloating="True"
                Visibility="{Binding CurrentPassPassBoxVisible}" />
            <TextBox
                Padding="0,4,25,4"
                materialDesign:HintAssist.Hint="Current Password"
                materialDesign:HintAssist.IsFloating="True"
                Text="{Binding Model.CurrentPassword}"
                Visibility="{Binding CurrentPassTextBoxVisible}" />
            <Button
                Width="20"
                Height="20"
                Margin="0,5,0,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding ToggleCurrentPassVisibleCmd}"
                Cursor="Hand"
                Foreground="Black"
                TabIndex="0">
                <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    Kind="{Binding CurrentPassIcon}" />
            </Button>
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <PasswordBox
                Padding="0,4,24,4"
                common:PasswordHelper.Attach="True"
                common:PasswordHelper.Password="{Binding Model.NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                materialDesign:HintAssist.Hint="New Password"
                materialDesign:HintAssist.IsFloating="True"
                Visibility="{Binding NewPassPassBoxVisible}" />
            <TextBox
                Padding="0,4,25,4"
                materialDesign:HintAssist.Hint="New Password"
                materialDesign:HintAssist.IsFloating="True"
                Text="{Binding Model.NewPassword}"
                Visibility="{Binding NewPassTextBoxVisible}" />
            <Button
                Width="20"
                Height="20"
                Margin="0,5,0,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding ToggleNewPassVisibleCmd}"
                Cursor="Hand"
                Foreground="Black"
                TabIndex="0">
                <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    Kind="{Binding NewPassIcon}" />
            </Button>
        </Grid>

        <StackPanel
            Grid.Row="3"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="10,0"
                Command="{Binding SaveCmd}"
                Content="Update" />
            <Button
                Width="75"
                Command="{Binding CancelCmd}"
                Content="Cancel"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>
    </Grid>

</UserControl>
