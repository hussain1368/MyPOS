<UserControl
    x:Class="POS.WPF.Views.Sections.PartnerForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid MinWidth="500" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10,0,10,5">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Partner Details" />
            <ProgressBar IsIndeterminate="{Binding IsLoading}" />
        </StackPanel>

        <ComboBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="Partner Type"
            materialDesign:TextFieldAssist.HasClearButton="True"
            DisplayMemberPath="Name"
            ItemsSource="{Binding PartnerTypeList}"
            SelectedValue="{Binding CurrentPartner.PartnerTypeId}"
            SelectedValuePath="Id"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            materialDesign:HintAssist.Hint="Currency"
            materialDesign:TextFieldAssist.HasClearButton="True"
            DisplayMemberPath="Name"
            ItemsSource="{Binding CurrencyList}"
            SelectedValue="{Binding CurrentPartner.CurrencyId}"
            SelectedValuePath="Id"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Margin="10"
            materialDesign:HintAssist.Hint="Name"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentPartner.Name" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            materialDesign:HintAssist.Hint="Phone"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentPartner.Phone" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <TextBox
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10"
            materialDesign:HintAssist.Hint="Address"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentPartner.Address" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <TextBox
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="10"
            materialDesign:HintAssist.Hint="Note"
            AcceptsReturn="True"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Text>
                <Binding Path="CurrentPartner.Note" UpdateSourceTrigger="PropertyChanged" />
            </TextBox.Text>
        </TextBox>
        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="10,5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="10,0"
                Command="{Binding SaveCmd}"
                Content="Save" />
            <Button Command="{Binding CancelCmd}" Content="Cancel" />
        </StackPanel>
    </Grid>
</UserControl>
