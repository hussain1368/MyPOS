<UserControl
    x:Class="POS.WPF.Views.Sections.InvoiceForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:conv="clr-namespace:POS.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:layout="clr-namespace:POS.WPF.Views.Shared"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:POS.WPF.Controls"
    Padding="20,10"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:RadioToEnumConverter x:Key="RadioConverter" />
    </UserControl.Resources>
    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="Loaded" SourceName="FormGrid">
            <Behaviors:InvokeCommandAction Command="{Binding LoadOptionsCmd}" />
        </Behaviors:EventTrigger>
        <Behaviors:EventTrigger EventName="PreviewTextInput" SourceName="ProductDrp">
            <Behaviors:InvokeCommandAction Command="{Binding FindByNameInputCmd}" />
        </Behaviors:EventTrigger>
        <Behaviors:EventTrigger EventName="PreviewKeyUp" SourceName="ProductDrp">
            <Behaviors:InvokeCommandAction Command="{Binding FindByNameKeyUpCmd}" PassEventArgsToCommand="True" />
        </Behaviors:EventTrigger>
        <Behaviors:EventTrigger EventName="SelectionChanged" SourceName="ProductDrp">
            <Behaviors:InvokeCommandAction Command="{Binding AddInvoiceItemCmd}" />
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>

    <GroupBox
        materialDesign:ColorZoneAssist.Mode="PrimaryMid"
        Header="{Binding FormTitle}"
        Style="{DynamicResource MaterialDesignCardGroupBox}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid x:Name="FormGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10"
                    materialDesign:HintAssist.Hint="Wallet"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding WalletsList}"
                    SelectedValue="{Binding CurrentInvoice.Wallet}"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10"
                    materialDesign:HintAssist.Hint="Warehouse"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding WarehousesList}"
                    SelectedValue="{Binding CurrentInvoice.WarehouseId}"
                    SelectedValuePath="Id"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="10"
                    materialDesign:HintAssist.Hint="Customer/Supplier"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding PartnersList}"
                    SelectedValue="{Binding CurrentInvoice.PartnerId}"
                    SelectedValuePath="Id"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                <DatePicker
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    materialDesign:HintAssist.Hint="Date"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Language="en-GB">
                    <DatePicker.SelectedDate>
                        <Binding
                            Path="CurrentInvoice.IssueDate"
                            TargetNullValue=""
                            UpdateSourceTrigger="PropertyChanged" />
                    </DatePicker.SelectedDate>
                </DatePicker>

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    materialDesign:HintAssist.Hint="Currency Rate"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasClearButton="True">
                    <TextBox.Text>
                        <Binding
                            Path="CurrentInvoice.CurrencyRate"
                            TargetNullValue=""
                            UpdateSourceTrigger="PropertyChanged" />
                    </TextBox.Text>
                </TextBox>

                <layout:RadioBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="10"
                    Label="Payment Type"
                    Tag="{Binding CurrentInvoice.PaymentType}">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton
                            Margin="0"
                            Content="Cash"
                            Validation.ErrorTemplate="{x:Null}">
                            <RadioButton.IsChecked>
                                <Binding
                                    Converter="{StaticResource RadioConverter}"
                                    ConverterParameter="Cash"
                                    Mode="TwoWay"
                                    Path="CurrentInvoice.PaymentType" />
                            </RadioButton.IsChecked>
                        </RadioButton>
                        <RadioButton
                            Margin="20,0"
                            Content="Loan"
                            Validation.ErrorTemplate="{x:Null}">
                            <RadioButton.IsChecked>
                                <Binding
                                    Converter="{StaticResource RadioConverter}"
                                    ConverterParameter="Loan"
                                    Mode="TwoWay"
                                    Path="CurrentInvoice.PaymentType" />
                            </RadioButton.IsChecked>
                        </RadioButton>
                    </StackPanel>
                </layout:RadioBox>

                <my:MyComboBox
                    x:Name="ProductDrp"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Product"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    IsEditable="True"
                    IsTextSearchEnabled="False"
                    ItemsSource="{Binding ProductsList, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}"
                    StaysOpenOnEdit="True"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                    Text="{Binding SearchValue, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    materialDesign:HintAssist.Hint="Notes"
                    AcceptsReturn="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding CurrentInvoice.Note}" />

                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Height="150"
                    Margin="10"
                    VerticalAlignment="Top"
                    Background="DarkGray"
                    CornerRadius="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="32"
                            FontWeight="Bold"
                            Text="{Binding InvoiceTotalPrice, StringFormat={}{0:N0}}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="36"
                            FontWeight="Bold"
                            Text="{Binding CurrentInvoice.Wallet.CurrencyCode}" />
                    </StackPanel>
                </Border>

                <DataGrid
                    x:Name="ItemsDataGrid"
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    MinHeight="150"
                    Margin="10"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserReorderColumns="False"
                    ItemsSource="{Binding InvoiceItems}"
                    SelectionMode="Single"
                    SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Index}"
                            CanUserSort="False"
                            Header="#"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding ProductCode}"
                            CanUserSort="False"
                            Header="Code"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding ProductName}"
                            CanUserSort="False"
                            Header="Name"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding UnitPrice, StringFormat={}{0:N0}}"
                            CanUserSort="False"
                            Header="Unit Price"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding UnitDiscount, StringFormat={}{0:N0}}"
                            CanUserSort="False"
                            Header="Discount"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Quantity, StringFormat={}{0:N0}}"
                            CanUserSort="False"
                            Header="Quantity"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding TotalPrice, StringFormat={}{0:N0}}"
                            CanUserSort="False"
                            Header="Total"
                            IsReadOnly="True" />
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Width="20"
                                            Height="20"
                                            Margin="5,0"
                                            Command="{Binding DataContext.DecrementInvoiceItemCmd, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                            CommandParameter="{Binding Index}"
                                            Style="{StaticResource MaterialDesignIconButton}">
                                            <materialDesign:PackIcon
                                                Width="15"
                                                Height="15"
                                                Kind="Minus" />
                                        </Button>
                                        <Button
                                            Width="20"
                                            Height="20"
                                            Margin="5,0"
                                            Command="{Binding DataContext.IncrementInvoiceItemCmd, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                            CommandParameter="{Binding Index}"
                                            Style="{StaticResource MaterialDesignIconButton}">
                                            <materialDesign:PackIcon
                                                Width="15"
                                                Height="15"
                                                Kind="Add" />
                                        </Button>
                                        <Button
                                            Width="20"
                                            Height="20"
                                            Margin="5,0"
                                            Foreground="Red"
                                            Style="{StaticResource MaterialDesignIconButton}">
                                            <materialDesign:PackIcon
                                                Width="15"
                                                Height="15"
                                                Kind="TrashOutline" />
                                            <Button.Command>
                                                <Binding Path="DataContext.DeleteInvoiceItemCmd" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type UserControl}}" />
                                            </Button.Command>
                                            <Button.CommandParameter>
                                                <Binding Path="Index" />
                                            </Button.CommandParameter>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        Command="{Binding SaveCmd}"
                        Content="Save" />
                    <Button
                        Margin="0"
                        HorizontalAlignment="Right"
                        Command="{Binding CancelCmd}"
                        Content="Cancel" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </GroupBox>
</UserControl>
