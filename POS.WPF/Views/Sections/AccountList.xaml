<UserControl x:Class="POS.WPF.Views.Sections.AccountList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="Loaded" SourceName="AccountsGrid">
            <Behaviors:InvokeCommandAction Command="{Binding LoadListCmd}"/>
        </Behaviors:EventTrigger>
        <Behaviors:EventTrigger EventName="SelectionChanged" SourceName="AccountTypeCombo">
            <Behaviors:InvokeCommandAction Command="{Binding LoadListCmd}"/>
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <ComboBox Grid.Row="1" Grid.Column="0" Width="150" x:Name="AccountTypeCombo"
                  materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:HintAssist.Hint="Account Type"
                  SelectedValue="{Binding AccountTypeId}" DisplayMemberPath="Name" SelectedValuePath="Id" ItemsSource="{Binding AccountTypeList}"/>
            <Button Margin="10 0" Style="{StaticResource MaterialDesignRaisedAccentButton}" Command="{Binding DeleteCmd}" Content="Delete"/>
            <Button Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding LoadListCmd}" Content="Search"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="AccountsGrid" CanUserAddRows="False" SelectionUnit="FullRow"
                    AutoGenerateColumns="False" SelectionMode="Single"
                    ItemsSource="{Binding AccountsList}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Code" Width="Auto" Binding="{Binding IsChecked}" EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                    <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="CheckAllCheckBox" 
                                        Command="{Binding DataContext.CheckAllCmd,
                                        UpdateSourceTrigger=PropertyChanged,
                                        RelativeSource={RelativeSource FindAncestor,
                                        AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"/>
                        </DataTemplate>
                    </DataGridCheckBoxColumn.HeaderTemplate>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Name" Width="Auto" Binding="{Binding Name}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Account Type" Width="Auto" Binding="{Binding AccountTypeName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Phone" Width="Auto" Binding="{Binding Phone}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Currency" Width="Auto" Binding="{Binding CurrencyCode}" IsReadOnly="True"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="20" Height="20" ToolTip="Open"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Command="{Binding DataContext.ShowFormCmd,
                                    RelativeSource={RelativeSource FindAncestor,
                                    AncestorType={x:Type UserControl}}}"
                                    CommandParameter="{Binding Id}">
                                <materialDesign:PackIcon Kind="NoteEditOutline" Width="15" Height="15"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
