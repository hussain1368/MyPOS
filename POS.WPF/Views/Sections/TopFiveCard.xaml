<UserControl
    x:Class="POS.WPF.Views.Sections.TopFiveCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS.WPF.Views.Sections"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <materialDesign:Card Padding="10" materialDesign:ShadowAssist.ShadowDepth="Depth1">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,5,0" Kind="{Binding IconKind}" />
                <TextBlock
                    Grid.Row="0"
                    FontFamily="Calibri"
                    FontSize="15"
                    FontStyle="Italic"
                    Text="{Binding Title}" />
            </StackPanel>
            <Line
                Grid.Row="1"
                Margin="0,5,0,0"
                Stretch="Fill"
                Stroke="Gray"
                StrokeThickness="2"
                X1="0"
                X2="1"
                Y1="0"
                Y2="0" />
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                            <DockPanel Grid.Row="2" LastChildFill="False">
                                <TextBlock
                                    FontFamily="Calibri"
                                    FontSize="12"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    FontFamily="Calibri"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Total, StringFormat='N0'}" />
                            </DockPanel>
                            <ProgressBar
                                Grid.Row="3"
                                Height="10"
                                Margin="0"
                                Value="{Binding Percent}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </materialDesign:Card>
</UserControl>
