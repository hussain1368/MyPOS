<UserControl
    x:Class="POS.WPF.Views.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:beh="clr-namespace:POS.WPF.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS.WPF.Views.Sections"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:POS.WPF.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="Loaded">
            <Behaviors:InvokeCommandAction Command="{Binding LoadNumbersCmd}" />
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>

    <Border>

        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <local:SingleNumberCard
                    Grid.Column="0"
                    Margin="15,15,0,15"
                    DataContext="{Binding TotalSale}" />

                <local:SingleNumberCard
                    Grid.Column="1"
                    Margin="15,15,0,15"
                    DataContext="{Binding TotalExpense}" />

                <!--<local:SingleNumberCard
                Grid.Column="2"
                Margin="15,15,0,15"
                DataContext="{Binding CurrentBalance}" />-->

                <local:SingleNumberCard
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="15"
                    DataContext="{Binding CurrentBalance}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <local:TopFiveCard
                    Grid.Column="0"
                    Margin="15,0,0,15"
                    DataContext="{Binding BestProducts}" />

                <local:TopFiveCard
                    Grid.Column="1"
                    Margin="15,0,15,15"
                    DataContext="{Binding BestCustomers}" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
